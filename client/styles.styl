*
  box-sizing: border-box

html
  font-size: 10px

html, body, main
  margin: 0
  padding: 0
  height: 100%

main
  background: linear-gradient(to bottom, #001c4b, #0068b6, #001c4b)
  align-items: center;
  justify-content: center
  
h1
  color: #99ca3d
  font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
  font-weight: normal
  font-size: 3rem
  line-height: 1.2em
  

.calculator-container
  position: absolute
  z-index: 11
  top: 50%
  left: 50%
  transform: translate(-50%, -60%)
  min-width: 600px

 .calculator
  position: relative
  border: 2px solid #0069bc
  border-radius: 20px
  // background: #00203e
  background-color: rgba(0, 32, 62, 0.45);
  width: 800px
  height: 300px
  box-shadow: 0px 40px 20px -30px rgba(0,0,0,0.75);

.calculator-left-panel
  display: inline-block
  position: relative
  height: 100%
  width: 40%

.accounts-list
  height: 80%
  margin-top: 10%
  margin-left: 8%
  font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
  .accounts-headings
    margin-bottom: 1em
    color: #999999
    font-size: 1.3rem
    font-style: italic
    span:first-child
      display: inline-block
      width: 9rem
  .accounts-list-item
    display: table
    padding: 0.5rem 1rem 0.5rem 0.5rem
    margin: 0.5rem -0.5rem
    color: white
    font-size: 1.5rem
    &.active
      color: #19323f
      background: #66ccff
      border-radius: 10px
    span
      padding-left: 0.5rem
      vertical-align: middle
    span:first-child
      display: inline-block
      width: 9rem   
  
.right-arrow
  height: 100%
  position: absolute
  top: 0
  right: 0
  img
    height: 100%
    color: blue


.calculator-right-panel
  display: inline-block
  position: absolute
  top: 0
  right: 0
  height: 100%
  width: 60%
  .slider-container
    width: 80%
    margin: 15% auto 8% auto
  .slider
    width: 100%
  .ui-slider
    background: #a9b1bc
    box-shadow: inset 0 2px 2px #3f5866;
    .ui-slider-handle
      height: 2rem
      width: 2rem
      top: -0.7rem
      border: 3px solid white
      border-radius: 50%
      background: radial-gradient(#2e90f2, #196ab9)
    .ui-slider-range
      background: linear-gradient(to bottom, #ffcf0d, #ffefae 30%, #ff9f00)
    .tooltip
      position: absolute
      background: white
      white-space: nowrap
      top: -4.5rem
      left: -210%
      padding: 0.5rem
      font-size: 1.5rem
      font-weight: bold
      background: linear-gradient(to bottom, #ffffff, #c9c9c9)
      &:after
        position: absolute
        top: 96%
        left: 50%
        height: 0
        width: 0
        border: solid transparent;
        border-width: 6px
        border-top: 10px solid #c9c9c9
        margin-left: -6px
        content: " "
  .info
    .today
      margin-bottom: 3rem
    .label
      display: inline-block
      vertical-align: top
      padding-left: 3rem
      line-height: 1.3em
      font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
      font-style: italic
      font-size: 1.5rem
      width: 50%
      color: #60c2f5
    .value
      display: inline-block
      width: 45%
      vertical-align: top
      padding-right: 3rem
      text-align: right
      color: white
      font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
      font-size: 3rem
      font-weight: bold


                    
.graph
  position: absolute
  opacity: 0.3
  left: 0
  top: 65%
  z-index: 0
  width: 100%
  height: 100px
  width: 100%
  background-image: url("./images/graph.png")