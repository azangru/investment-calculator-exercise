*
  box-sizing: border-box

html
  font-size: 10px

html, body, main
  margin: 0
  padding: 0
  height: 100%

main
  background: linear-gradient(to bottom, #001c4b, #0068b6, #001c4b)
  align-items: center;
  justify-content: center
  
h1
  color: #99ca3d
  font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
  font-weight: normal
  font-size: 3rem
  line-height: 1.2em
  

.calculator-container
  position: absolute
  z-index: 11
  top: 50%
  left: 50%
  transform: translate(-50%, -60%)
  min-width: 600px

 .calculator
  position: relative
  border: 2px solid #0069bc
  border-radius: 20px
  // background: #00203e
  background-color: rgba(0, 32, 62, 0.45);
  width: 800px
  height: 300px
  box-shadow: 0px 40px 20px -30px rgba(0,0,0,0.75);

.calculator-left-panel
  display: inline-block
  position: relative
  height: 100%
  width: 40%

.accounts-list
  height: 80%
  margin-top: 10%
  margin-left: 8%
  font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
  .accounts-headings
    margin-bottom: 1em
    color: #999999
    font-size: 1.5rem
    font-style: italic
    span:first-child
      display: inline-block
      width: 9rem
  .accounts-list-item
    display: table
    padding: 0.5rem 1rem 0.5rem 0.5rem
    margin: 0.5rem -0.5rem
    color: white
    font-size: 1.8rem
    &.active
      color: #19323f
      background: #66ccff
      border-radius: 10px
    span
      padding-left: 0.5rem
      vertical-align: middle
    span:first-child
      display: inline-block
      width: 9rem   
  
.right-arrow
  height: 100%
  position: absolute
  top: 0
  right: 0
  img
    height: 100%
    color: blue


.calculator-right-panel
  display: inline-block
  position: absolute
  top: 0
  right: 0
  height: 100%
  width: 60%
  .slider
    width: 80%
    margin: 15% auto
    input
      width: 100%

rangeThumb()
    border: 3px solid white
    width: 2rem
    height: 2rem
    border-radius: 50%
    margin: -3px
    background: 
      radial-gradient(#2e90f2, #196ab9) padding-box, linear-gradient(-45deg, green, #6db04f) border-box #fff;
    filter: drop-shadow(1px .125em .125em rgba(#000, .4))
      
input[type=range]
  -webkit-appearance: none;
  border: 0px;
  background-color: transparent;
  &::-webkit-slider-runnable-track
    width: 100%
    height: 1rem
    background-color: #a9b1bc
    border: none
    border-radius: 10px
    box-shadow: inset 0 5px 2px #888
  &::-webkit-slider-thumb
    -webkit-appearance: none
    rangeThumb()
  &::-moz-range-thumb
    rangeThumb()

