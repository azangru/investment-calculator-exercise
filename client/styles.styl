html
  font-size: 10px

html, body, main
  margin: 0
  padding: 0
  height: 100%

main
  background: linear-gradient(to bottom, #001c4b, #0068b6, #001c4b)
  align-items: center;
  justify-content: center
  
h1
  color: #99ca3d
  font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
  font-weight: normal
  font-size: 3rem
  line-height: 1.2em
  

.calculator-container
  position: absolute
  z-index: 11
  top: 50%
  left: 50%
  transform: translate(-50%, -60%)
  min-width: 600px

 .calculator
  position: relative
  border: 2px solid #0069bc
  border-radius: 20px
  background: #00203e
  opacity: 0.45
  width: 800px
  height: 300px
  box-shadow: 0px 40px 20px -30px rgba(0,0,0,0.75);

.calculator-left-panel
  display: inline-block
  position: relative
  height: 100%
  width: 40%

.accounts-list
  height: 80%
  margin-top: 10%
  margin-left: 5%
  font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
  .accounts-headings
    margin-bottom: 1em
    color: #999999
    font-size: 1.5rem
    font-style: italic
    span:first-child
      display: inline-block
      width: 25%
  .accounts-list-item
    color: white
    font-size: 1.8rem
    &.active
      background: blue
    span
      padding-left: 0.5rem
    span:first-child
      display: inline-block
      width: 25%    
  
.right-arrow
  height: 100%
  position: absolute
  top: 0
  right: 0
  img
    height: 100%
    color: blue
    
  
.graph
  position: absolute
  opacity: 0.3
  left: 0
  top: 65%
  z-index: 0
  width: 100%
  height: 100px
  width: 100%
  background-image: url("./images/graph.png")